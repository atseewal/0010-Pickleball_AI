{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Fast API: main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}", // Be careful that this actually runs your environment
        },
        {
            "name": "Python Streamlit: app.py",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "${workspaceFolder}/app.py"],
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "justMyCode": true,
        }
    ]
}